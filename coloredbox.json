{
	"id": "com.sap.sample.coloredbox",
	"version": "1.0.0",
	"name": "Colored Box",  
	"description": "Description of colored box widget",
	"newInstancePrefix": "ColoredBox",  
	"icon": "https://alfredwangtj.github.io/coloredbox-test/icon.png",  
	"vendor": "SAP",  
	"eula": "",
	"license": "",
	"webcomponents": [
		{
			"kind": "main",  
			"tag": "com-sap-sample-coloredbox",  
			"url": "https://alfredwangtj.github.io/coloredbox-test/coloredbox.js",  
			"integrity": "",  
			"ignoreIntegrity": true  
		},
		{
			"kind": "styling",  
			"tag": "com-sap-sample-coloredbox-styling",  
			"url": "https://alfredwangtj.github.io/coloredbox-test/coloredbox_styling.js",
			"integrity": "",
			"ignoreIntegrity": true
		},
		{
			"kind": "builder",  
			"tag": "com-sap-sample-coloredbox-builder",
			"url": "https://alfredwangtj.github.io/coloredbox-test/coloredbox_builder.js",
			"integrity": "",
			"ignoreIntegrity": true
		}
	],
	"properties": {  
		"color": {  
			"type": "string",  
			"description": "Background color",  
			"default": "red" 
		},
		"opacity": { 
			"type": "number",
			"description": "Opacity",
			"default": 1
		},
		"width": { 
			"type": "integer",
			"default": 100
		},
		"height": {  
			"type": "integer",
			"default": 100
		}
	},
	"methods": {  
		"setColor": {  
			"description": "Sets the background color.",  
			"parameters": [  
				{
					"name": "newColor",  
					"type": "string",  
					"description": "The new background color"  
				}
			],
			"body": "this.color = newColor; console.log(\"coloredbox.json - setColor\");"  
		},
		"getColor": {  
			"returnType": "string",
			"description": "Returns the background color."
		}
	},
	"events": { 
		"onClick": {  
			"description": "Called when the user clicks the Colored Box."  
	}
}
